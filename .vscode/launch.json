	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Proxy",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\dist\\index.js",
			"args": ["--trace-warnings", "--proxy"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Minecraft Server",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\dist\\index.js",
			"args": ["--trace-warnings", "--server"]
		}
	]
}